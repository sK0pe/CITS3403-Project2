extends layout
block content
    section.textBox.regText
        h1 Write Comment
        hr
        form(action='/comments/write', method='post', onsubmit='return formContent()')
            div.form-group
                label
                    h2 Title
                input#title.form-control.userInput(type='text', placeholder='Title of your Comment', name='title', autofocus)
            div.form-group
                label
                    h2 Post
                textarea#editor.commentEditor.userInput(name='content', wrap='soft', spellcheck='true').form-control
            button.btn.btn-default.btn-lg.pull-right(type='submit') Post
            br
